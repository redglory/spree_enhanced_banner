<%= form_for @configuration, :url => set_admin_taxon_path(:id => @taxon.id, html: { method: "patch" }) do |form|%>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :selection_mode, Spree.t(:mode) %>:
        <%= form.select(:selection_mode, options_for_select([["Random", "random"], ["Cycle", "cycle"]], @configuration.selection_mode)) %>
      </div>
      <div class="form-group">
        <%= form.label :max_count, Spree.t(:banners_max_count) %>:
        <%= form.number_field :max_count, :min => 1 %>
      </div>
      <div class="form-group">
        <%= label_tag :reset_indexes, Spree.t(:reset_indexes) %>:
        <%= check_box_tag(:reset_indexes) %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= form.submit Spree.t(:set_configuration) %>
  </div>
<% end %>